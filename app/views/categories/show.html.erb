
      <h2 class="text-center mt-4"><%= @category.name%></h1>
      
      <div class="container">
    
             <div class="row justify-content-md-center">
               
                <div class="col-8 mt-4"> 
                
                  <div class="card text-center shadow mb-5 bg-white rounded" style="width: 18rem;">
                    
                    <div class="card-header font-italic">
                      
                       <%= @category.name %>
                      
                      
                      
                    </div>
                    <div class="card-body">
                      
                      <div class="card-text text-left"><%= simple_format(@category.name) %></div>
                      
                        <% if (logged_in? && current_user.admin == true) %>                    
                          <%= link_to "Edit", edit_category_path(@category), class: "btn btn btn-secondary" %>
                          <%= link_to "Delete", categories_path(@category), class: "btn btn-danger" %>
                        <% end %>
                      
                      </div>
                    
                    <div class="card-footer text-muted">
                      <small> Created <%= time_ago_in_words(@category.created_at) %>, ago
                      edited <%= time_ago_in_words(@category.updated_at) %> , ago </small>
                    </div>
                  </div>
                </div>
              </div>
   
            
      </div>    
      