<h1 class="text-center mt-4"></h1>

<div class="container">

      <% @category.each do |category| %>
  
       <div class="row justify-content-md-center">
          <div class="col-4 mt-4"> 
            <div class="card text-center shadow mb-5 bg-white rounded" style="width: 18rem;">
              

              <div class="card-body">
                <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success"%></h5>

                <%= link_to "View", category_path(category), class: "btn btn-outline-success" %>
                

                
              </div>
              
              <div class="card-footer text-muted">

              </div>
            </div>
          </div>
        </div>
  
      <% end %>
      
</div>
  



