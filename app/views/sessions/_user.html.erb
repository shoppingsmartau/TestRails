<h1 class="text-center mt-4">User Profiles</h1>

<div class="container">

      <% @users.each do |user| %>
  
       <div class="row justify-content-md-center">
          <div class="col-8 mt-4"> 
            <div class="card text-center shadow mb-5 bg-white rounded" style="width: 18rem;">
              
                <div class="p-3 mb-2 bg-info text-white ">
                  
                   <%= link_to user.username, user %>
                  
                </div>
                
                <div class="card-body">
                  <h5 class="card-title"> 
                      <%= link_to gravatar_for(user, size: 150), user %> 
                  </h5>
                  <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                  <%= link_to "View Profile",  user_path(user), class: "btn btn-outline-success" %>
                  <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn btn-secondary" %>
                </div>
                
                <div class="card-footer text-muted">
                  
                </div>
            </div>
          </div>
      </div>
  
      <% end %>
      
</div>      
 
  



